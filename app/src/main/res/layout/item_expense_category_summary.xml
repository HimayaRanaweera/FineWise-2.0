<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/category_chip_bg"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#22314D" />

    <TextView
        android:id="@+id/textCategoryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US$0.00"
        android:textSize="14sp"
        android:textColor="#388E3C"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/textCategoryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 transactions"
        android:textSize="12sp"
        android:textColor="#22314D"
        android:layout_marginTop="2dp" />

</LinearLayout> 